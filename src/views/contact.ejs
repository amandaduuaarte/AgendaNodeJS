<%- include('includes/head') %> <%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8 my-3">
      <%- include('includes/messagens') -%>
      
      <h2 class="text-center">Oi, <%= user.name %>. Cadastre um novo contato na sua agenda.</h2>
     
      <%if(contact._id) { %>
        <form action="/contact/edit/<%= contact._id %>" method="POST">
      <%} else { %>
        <form action="/contact" method="POST">
      <% } %> 

      <input type="hidden" name="_csrf" value=<%= csrfToken %>>
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label"> Nome do contato </label>
         
          <input
            type="text"
            class="form-control"
            name="name"
            value="<%= contact.name %>" 
          />
        </div>

        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label"> Sobrenome do contato </label>
            <input
              type="text"
              class="form-control"
              name="lastName"
              value="<%= contact.lastName %>" 
            />
         </div>

        <div class="mb-3">
          <label for="exampleInputPassword1" class="form-label"> Email do contato </label>
          <input
            type="email"
            class="form-control"
            id="exampleInputEmail1"
            name="email"
            value="<%= contact.email %>" 
          />
        </div>

        <div class="mb-3">
          <label for="exampleInputPassword1" class="form-label"> Numero de telefone do contato </label>
            <input
              type="tell"
              class="form-control"
              id="exampleInputEmail1"
              name="phone"
              value="<%= contact.phone %>" 
            />
        </div>

        <button type="submit" class="btn btn-primary">Salvar</button>
      </form>
    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>
