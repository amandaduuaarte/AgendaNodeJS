<%- include('includes/head') %> <%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8 my-3">
      <%- include('includes/messagens') -%>

      <h1 class="text-center">Agenda</h1>
      <p class="text-center lead"><%= user.userName %>, seus contatos abaixo</p>

      <div class="responsive-table">
        <table class="table my-3">

          <% contacts.forEach(contact => { %>
            <tr>
              <td><%= contact.name%></td>
              <td><%= contact.lastName%></td>
              <td><%= contact.email%></td>
              <td><%= contact.phone%></td>
              <td><a href="/contact/index/<%= contact._id %>">Editar</a></td>
              <td><a class="text-danger" href="/contact/index/delete/<%= contact._id %>">Excluir</a></td>
            </tr>
            <% }); %>
            
        </table>
      </div>
    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>
